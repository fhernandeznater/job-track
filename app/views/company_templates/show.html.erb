<h1>
  Company #<%= @the_company.id %> details
</h1>

<article>
  <div>
    <a href="/companies">
      Go back
    </a>
  </div>

  <div>
    <a href="/delete_company/<%= @the_company.id %>">
      Delete company
    </a>
  </div>
  <dl>
    <dt>
      Name
    </dt>
    <dd>
      <%= @the_company.name %>
    </dd>

    <dt>
      Job descriptions count
    </dt>
    <dd>
      <%= @the_company.job_descriptions_count %>
    </dd>

    <dt>
      Created at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_company.created_at) %> ago
    </dd>

    <dt>
      Updated at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_company.updated_at) %> ago
    </dd>
  </dl>
</article>

<hr>


<article>
  <header>
    <h2>
      Edit company
    </h2>
  </header>

  <form action="/modify_company/<%= @the_company.id %>"  method="post" >
    <div>
      <label for="name_box">
        Name
      </label>

      <input type="text" id="name_box" name="query_name" value="<%= @the_company.name %>">
    </div>

    <div>
      <label for="job_descriptions_count_box">
        Job descriptions count
      </label>

      <input type="text" id="job_descriptions_count_box" name="query_job_descriptions_count" value="<%= @the_company.job_descriptions_count %>">
    </div>

    <button type="submit">
      Update company
    </button>
  </form>
</article>

<hr>
