<div class="container">

<h1>JobTrack</h1>

<%= link_to "New Application", "/job_applications/new", class: "btn btn-primary btn-lg" %>

<!--<button type="button" class="btn btn-primary btn-lg">New Application</button>-->

<% if current_user %>
  <p>You are signed in as <%= current_user.email_address %></p>
<% else %>
